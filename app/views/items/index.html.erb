<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Product name</th>
      <th>Product sku</th>
      <th>Quantity</th>
      <th>Expiration date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <% prod = ''
         @products.each { |product| prod = product.Product_Name if product.SKU == item.Product_SKU } %>
      <tr>
        <td><%= prod %></td>
        <td><%= item.Product_SKU %></td>
        <td><%= item.Quantity %></td>
        <td><%= item.Expiration_Date %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
